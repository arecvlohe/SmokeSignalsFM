$highlight: #cca580;
$white: #ffffff;
$dark: #443847;
$light: #edeff5;

$black: #505050;

body {
  font-family: 'SinkinSans XLight', sans-serif;
  position: relative
}

.wrapper-wide {
  width: 90%;
  margin: 0 auto;
}

#banner  {
  position: fixed;
  top: 46%;
  left: 50%;
  margin-right: -50%;
  transform: translate(-50%, -50%);
}

.wrapper {
  width: 80%;
  margin: 0 auto;
}

.wrapper-skinny {
  width: 50%;
  margin: 0 auto;
}

.responsive-break {
  white-space: nowrap;
}

.cf:before,
.cf:after {
  content: " ";
  display: table;
}

.cf:after {
  clear: both;
}

.notice-wrapper {
  width: 100%;
  position: absolute;
  background: rgba(193, 146, 102, .85);
  z-index: 999;

  p {
    color: $white;
    text-align: center;
    font-weight: 700;
    font-size: 1.25rem;
    padding: 1.5rem 0;
  }
}

.btn {
  color: $highlight;
  text-decoration: none;
  font-size: 1rem;
  padding: 1rem 2rem;
  border-radius: 2rem;
  outline: none;
  min-width: 15rem;
//  border: 2px solid $highlight;

  @media screen and (max-width: 600px) {
    min-width: 8rem;
  }
}

.btn-carrot {
  color: #2979FF;
  background: white;
  font-weight: medium;
  transition: background 0.4s ease-in-out;
  display: inline-block;
  &:hover {
    color: white;
    background: #2979FF;
    border: none;
  }
}

.btn-block {
  display: block;
  margin: 0 auto;
}

#main-header {
  color: $dark;
  background: $white;
  padding: 2.5rem 0;
  box-sizing: border-box;
  text-align: center;

  #logo {
    text-decoration: none;
    display: inline-block;
    color: $black;
    float: left;
    text-transform: uppercase;
    font-size: 2.5rem;
    font-weight: 300;
    letter-spacing: 3px;

    @media screen and (max-width: 1125px) {
      float: none;
      display: block;
    }

    @media screen and (max-width: 960px) {
      font-size: 2rem;
    }

    @media screen and (max-width: 620px) {
      font-size: 1.5rem;
    }
  }
  nav {
    display: inline-block;
    float: right;

    @media screen and (max-width: 1125px) {
      float: none;
      display: block;
    }

    ul {
      padding-left: 0;

      li {
        display: inline-block;
        list-style: none;
        color: $black;
        text-transform: uppercase;
        font-size: 1rem;
        margin-left: 0;

        @media screen and (max-width: 620px) {
          display: block;
          margin: 1.5rem 0;
          font-size: .8rem;
        }

        a {
          text-decoration: none;
          color: $black;
          padding: 0 1.5rem;

          @media screen and (max-width: 620px) {
            font-size: .8rem;
          }

        }

        a::before,
        a::after {
          opacity: 0;
          display: inline-block;
          -webkit-transition: -webkit-transform 0.3s, opacity 0.2s;
          -moz-transition: -moz-transform 0.3s, opacity 0.2s;
          transition: transform 0.3s, opacity 0.2s;
        }

        a::before {
          margin-right: 10px;
          display: inline-block;
          content: "(";
          -webkit-transform: translateX(20px);
          -moz-transform: -moz-translateX(20px);
          transform: translateX(20px);

        }

        a::after {
          margin-left: 10px;
          display: inline-block;
          content: ")";
          -webkit-transform: translateX(-20px);
          -moz-transform: -moz-translateX(-20px);
          transform: translateX(-20px);
        }

        a:hover::before,
        a:hover::after,
        a:focus::before,
        a:focus::after {
          opacity: 1;
          -webkit-transform: translateX(0px);
          -moz-transform: translateX(0px);
          transform: translateX(0px);
        }
      }
    }
  }
}

.banner {
  background: {
    repeat: no-repeat;
    size: cover;
    position: center center;
    width: 100%
  };
  margin-bottom: 4rem;
  h1 {
    font: {
      size: 3rem;
      weight: 300;
    };
    text-align: center;
    color: white;
    letter-spacing: 1px;
    margin: 0;
    padding: 8rem 0;
  }
}

.pagination:before, .pagination:after {
  content: " ";
  display: table;
}

.pagination:after {
  clear: both;
}

.pagination {
  text-align: center;
  margin: 1rem 0 5rem 0;
  a, .previous_page, .current, .next_page {
    padding: 0.75rem 1rem;
    margin: 0 0.25rem;
    border-radius: 0.15rem;
    line-height: 1.25;
    text-decoration: none;
    background-color: #eee;
    font-weight: 700;
    font-size: 0.7rem;
    font-style: normal;
    color: $dark;
    &:hover {
      background: $highlight;
      color: $white;
    }
  }
  .current {
    background: $highlight;
    color: $white;
  }
  .disabled {
    color: #c0c0c0;
    &:hover {
      color: #c0c0c0;
      background-color: #eee;
    }
  }
}

.field {
  margin: 0.5rem 0 1.5rem 0;
}

input[type="email"], input[type="text"], input[type="password"], textarea {
  width: 100%;
  height: 2.5rem;
  padding: 0.25rem 1rem;
  background: $light;
  border: 1px solid darken($light, 5%);
  border-radius: 0.35rem;
  margin-top: 0.5rem;
}

textarea {
  min-height: 8rem;
  margin-top: 0.5rem !important;
}

.form {
  padding: 0 0 5rem 0;
}

.main-footer {
  margin: 0 auto;
  text-align: center;
  padding: 1rem 0;
  position: fixed;
  bottom: 0rem;
  width: 100%;
  background: darken(#fff, 12%);

  hr {
    color: #eee;
    width: 90%;
  }
}

