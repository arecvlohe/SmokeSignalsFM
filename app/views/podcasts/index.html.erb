<div class="podcasts-banner">
  <h1>Discover your new favorite podcast</h1>
</div>
<div id="podcasts" class="cf">
  <div class="wrapper">
    <ul class="cf">
      <% @podcasts.each do |podcasts| %>
        <%= link_to podcasts do %>
          <li>
            <%= image_tag podcasts.thumbnail.url(:medium) %>
            <div class="podcast-overview">
              <h2><%= podcasts.title %></h2>
              <% if podcasts.episodes.count > 0 %>
                <p class="episode-count"><%= pluralize podcasts.episodes.size, 'Episode' %></p>
              <% else %>
                <p class="episode-count">Coming Soon</p>
              <% end %>

            </div>
          </li>
        <% end %>
      <% end %>
      </ul>

      <%= will_paginate @podcasts, previous_label: "Previous", next_label: "Next" %>
  </div>
</div>
