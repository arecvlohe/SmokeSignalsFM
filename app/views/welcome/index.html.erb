<div id="background">
  <header class="cf">
    <div class="wrapper-wide">
      <a><% link_to "SmokeSignals.fm", root_path, id: "logo" %></a>
      <nav>
        <ul>
          <% unless podcast_signed_in? %>
          <li><%= link_to "Search", podcasts_path %></li>
          <li><%= link_to "Sign In", new_podcast_session_path %></li>
          <li><%= link_to "Create a Podcast", new_podcast_registration_path %></li>
          <% else %>
            <li><a href="#">Dashboard</a></li>
            <li><%= link_to "Search", podcasts_path %></li>
            <li><%= link_to "Sign Out", destroy_podcast_session_path, method: :delete %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </header>
  <div class="wrapper-skinny">
    <h1>Search for Podcasts from Indian Country or Create Your Own</h1>
    <%= link_to "Create a Podcast", new_podcast_registration_path, class: "btn btn-hl" %>
    <%= link_to "Search", podcasts_path, class: "btn btn-df" %>
  </div>
</div>
